<%- include('../includes/head.ejs') %> <%- include('../includes/heading.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
  <ul class="cart__item-list">
    <% products.forEach(p => { %>
    <li class="cart__item">
      <div>
        <img src="/<%= p.productId.imageUrl %>" class="img-thumbnail" alt="" />
      </div>
      <h1><%= p.productId.title %></h1>
      <h2> تعداد : <%= p.quantity %></h2>
    </li>
    <% }) %> 
  </ul>

  <div class="centered">
    <h3>مبلغ نهایی : <%= totalSum %></h3>
  </div>
  <div class="centered">
    <a class="btn btn-info" href="/PaymentRequest">پرداخت</a>
  </div>
</main>

<%- include('../includes/end.ejs') %>
